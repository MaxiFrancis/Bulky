@page
@model BulkyWebRazor_Temp.Pages.Categoryes.IndexModel



<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
              <a asp-page="/Categoryes/create" class="btn btn-primary"> 
            <i class="bi bi-plus-circle"></i> Create New Category
             </a> 
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead></thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Desplay Order
            </th>
        </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.CategoryList.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <th>
                        @obj.Name
                    </th>
                    <th>
                        @obj.DisplayOrder
                    </th>
                    <th>
                        <div class="w-75 btn-group" role="group">
                             <a asp-page="/Categoryes/edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"> 
                            <i class="bi bi-pencil-square"></i> Edit
                              </a> 
                             <a asp-page="/Categoryes/delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"> 
                            <i class="bi bi-trash-fill"></i> Delete
                             </a> 
                        </div>
                    </th>
                </tr>
            }
        </tbody>
    </table>

</div>
